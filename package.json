{
   "name": "geo-node",
   "version": "1.0.0",
   "description": "RESTful User Geolocation Web Service",
   "main": "dist",
   "repository": "git@github.com:learn-geo-node/geo-node.git",
   "author": "Node Bldr Group",
   "license": "MIT",
   "engines": {
      "node": ">=16.0.0"
   },
   "scripts": {
      "start": "export NODE_ENV=production && ts-node --transpile-only -r tsconfig-paths/register src/app.ts",
      "dev": "export NODE_ENV=development && tsnd --respawn --transpile-only -r tsconfig-paths/register src/app.ts",
      "serve": "yarn build && yarn start",
      "build": "yarn clean && tsc",
      "clean": "rm -rf dist",
      "typeorm": "typeorm-ts-node-commonjs",
      "test": "jest",
      "test:watch": "jest --watchAll"
   },
   "dependencies": {
      "config": "^3.3.7",
      "cors": "^2.8.5",
      "dotenv": "^16.0.1",
      "envalid": "^7.3.1",
      "express": "^4.17.2",
      "pg": "^8.4.0",
      "reflect-metadata": "^0.1.13",
      "typeorm": "0.3.6",
      "typescript": "^4.7.4"
   },
   "devDependencies": {
      "@types/config": "^0.0.41",
      "@types/cors": "^2.8.12",
      "@types/express": "^4.17.13",
      "@types/express-serve-static-core": "^4.17.29",
      "@types/jest": "^28.1.3",
      "@types/morgan": "^1.9.3",
      "@types/node": "^16.11.10",
      "@types/supertest": "^2.0.12",
      "jest": "^28.1.1",
      "morgan": "^1.10.0",
      "nodemon": "^2.0.16",
      "supertest": "^6.2.3",
      "ts-jest": "^28.0.5",
      "ts-node-dev": "^2.0.0",
      "tsconfig-paths": "^4.0.0"
   }
}
